<p id="notice"><%= notice %></p>

<div class = "col-md-8 col-centered">
  <h1>Usu√°rios</h1>
  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Nusp</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.nusp %></td>
          <td><%= link_to 'Show', user, :class => "btn btn-outline-secondary" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-outline-secondary" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>
</div>
